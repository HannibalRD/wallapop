---
import  Layout  from "../layouts/Layout.astro";
import dades from "../../public/info.json"
import Card from "../components/Card.astro";
---

<Layout>
<div class="m-3" >
	<div class="grid grid-cols-[repeat(auto-fill,minmax(250px,1fr))] border-solid ">
		{dades.map(producte => <Card
		img={producte.img}
		preu={producte.preu}
		titol={producte.titol}/>)}
	</div>
</div>
</Layout>